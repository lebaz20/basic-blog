{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blog</h1>
    <a href="{{ path('blog_index') }}">Back to the list</a>
    <br><br>
    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr >
                    <th >Id </th>
                    <td >{{ blog.id }}</td>
                </tr>
                <tr >
                    <th >Name </th>
                    <td >{{ blog.name }}</td>
                </tr>
                <tr >
                    <th >Email </th>
                    <td >{{ blog.email }}</td>
                </tr>
                <tr >
                    <th >Address </th>
                    <td >{{ blog.address }}</td>
                </tr>
                <tr >
                    <th >Text </th>
                    <td >{{ blog.text |raw }}</td>
                </tr>
                <tr >
                    <th >Created </th>
                    <td >{% if blog.created %}{{ blog.created|date('Y-m-d') }}{% endif %}</td>
                </tr>
                <tr >
                    <th >Modified </th>
                    <td >{% if blog.modified %}{{ blog.modified|date('Y-m-d') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <br>
    <a class="btn btn-primary pull-left" href="{{ path('blog_edit', { 'id': blog.id }) }}">Edit</a>
    {{ form_start(delete_form) }}
    &nbsp;<input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
